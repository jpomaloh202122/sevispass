generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  uid             String   @unique
  firstName       String
  lastName        String
  email           String   @unique
  nid             String   @unique // NID or Passport Number
  phoneNumber     String   @unique
  password        String
  address         String?
  nidPhotoPath    String?  // Path to uploaded NID/Passport photo
  facePhotoPath   String?  // Path to captured face photo
  profileImagePath String? // Path to profile image (copy of face photo)
  isVerified      Boolean  @default(false) // Face verification status
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("users")
}
